@*catagory section*@

<section class="catagory_section layout_padding">
    <div class="catagory_container">
        <div class="container ">
            <div class="heading_container heading_center">
                <h2>
                    Some of our ice-cream flavors
                </h2>
                <p>
                    Who wants an ice cream?
                </p>
            </div>
            <div class="row">
                @foreach (var item in Model.Take(6))
                {
                    <div class="col-sm-6 col-md-4 ">
                        <div class="box ">
                            <div class="img-box">
                                <img class="" src="~/Areas/Local/FlavorImages/@Url.Content(item.Image)" />
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @item.Flavor_Name
                                </h5>
                                <p>
                                    @item.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }              

                <div class="col-sm-6 col-md-4 ">
                    <div class="box ">
                        <div class="detail-box">
                            <a href="~/About" style="color: red; text-decoration: none; text-transform: uppercase;">
                                and many more...
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@*end catagory section
    
    about section*@

<section class="about_section layout_padding">
    <div class="container ">
        <div class="row">
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/Content/images/Bookstore-ic-img.png" alt="" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <div class="heading_container">
                        <h2>
                            About Our Ice-Cream Bookstore And Recipe
                        </h2>
                    </div>
                    <p>
                        Young readers will fall in love all over again with Dennis Lee’s light-hearted verse, which embraces universal childhood experiences of every flavour, from digging holes to foreign lands to searching for the perfect pet.
                        David McPhail’s gorgeous watercolour paintings capture Lee’s subtle celebration of ulticulturalism and offer a colourful feast for the eye
                    </p>
                    <a href="~/About" style="background-color:orange;border:orange">
                        Read More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@*end about section
    
