@model List<IceCreamParlour.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <td>Mã Sách</td>
            <td>Tên Sách</td>
            <td>Ảnh SP</td>
            <td>Số lượng</td>
            <td>Đơn giá</td>
            <td>Thành tiền</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Book_Id</td>
                <td>@item.Book.Title</td>
                <td><img src="@item.Book.Image" width="100" /></td>
                <td><input type="text" class="quantity" value="@item.Quantity" /></td>
                <td>@item.Book.Price</td>
                <td>@(item.Book.Price * item.Quantity)</td>
            </tr>
        }

    </tbody>
</table>

