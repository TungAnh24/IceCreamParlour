<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&amp;display=swap" rel="stylesheet">

    <link href="~/Content/Recipes/css/background.css" rel="stylesheet" />
    <div class="view">

        <!-- Mask & flexbox options-->
        <div class="mask rgba-gradient d-flex justify-content-center align-items-center">
            <!-- Content -->
            <div class="container px-md-3 px-sm-0">
                <!--Grid row-->
                <div class="row wow fadeIn">
                    <!--Grid column-->
                    <div class="col-md-12 mb-4 white-text text-center wow fadeIn">
                        <h3 class="display-3 font-weight-bold white-text mb-0 pt-md-5 pt-5">RECIPES DETAIL</h3>
                        <hr class="hr-light my-4 w-75">
                        <h4>  @Html.DisplayFor(model => model.Title)</h4>

                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </div>
            <!-- Content -->
        </div>
        <!-- Mask & flexbox options-->
    </div>
</head>

<body>
    <div style="padding-top: 30px ; padding-bottom: 100px; border: hidden" class="container">

        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <img src="~/Areas/Local/BookImages/@Url.Content(Model.Image)" style="height:450px;width:450px;" />



                </div>
                <div class="details col-md-6">

                    <div style="padding-bottom: 20px">
                        <h4>Main Flavor: </h4>
                        @Html.DisplayFor(model => model.Title)


                    </div>
                    <div style="padding-bottom: 20px">
                        <h4>Ingredients</h4>
                        @Html.DisplayFor(model => model.Author)
                    </div>
                    <div style="padding-bottom: 20px">
                        <h4>MakingProcess</h4>
                        @Html.DisplayFor(model => model.Price)
                    </div>
                    <div class="add-cart">
                        <h4><a href="/them-gio-hang?book_Id=@Model.Book_Id&quantity=1">Add To Cart</a></h4>
                    </div>
                    <div>
                        @Html.ActionLink("Back to Recipe", "Index", "RecipesUserView")
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="~/Content/Recipes/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Recipes/js/custom.js"></script>
    <script src="~/Content/Recipes/js/jquery.min.js"></script>
</body>

</html>
