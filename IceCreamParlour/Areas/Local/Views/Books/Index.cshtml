@model IEnumerable<IceCreamParlour.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Local/Views/Shared/_AdminView.cshtml";
}

<h2>Book</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<center>
    <input type="text" id="txtSearch" placeholder="Enter Title Name..." />
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Create_Date)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.AdminAdd_Id)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.AdminUpdate_Id)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Update_Date)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.IsDelete)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleTrimmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesTrimmed)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ImageTrimmed)*@
                    @*<img src="@Url.Content(item.Image)" width="50" height="50" />*@
                    <img src="~/Areas/Local/BookImages/@Url.Content(item.Image)" style="height:50px;width:50px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Create_Date)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.AdminAdd_Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorTrimmed)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.AdminUpdate_Id)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Update_Date)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsDelete)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Book_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Book_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Book_Id },
                    new { onclick = "return confirm('Are you sure you wish to delete this book?');" })
                </td>
            </tr>
        }

    </table>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $("#txtSearch").on("keyup", function () {
            var txtEnter = $(this).val();
            $("table tr").each(function (result) {
                if (result !== 0) {
                    var id = $(this).find("td:nth-child(1)").text();
                    if (id.indexOf(txtEnter) !== 0 && id.toLowerCase().indexOf(txtEnter.toLowerCase()) < 0) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                }
            });
        });
    </script>
</center>
